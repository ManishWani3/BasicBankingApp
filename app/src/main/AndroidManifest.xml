<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basicbankingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicBankingApp">
        <activity android:name=".TransactionHistory"></activity>
        <activity android:name=".TransactionUserList" />
        <activity android:name=".ViewSingleUser" />
        <activity android:name=".ViewAllCustomers" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <provider
            android:name=".databasehandler.BankDataProvider"
            android:authorities="com.example.basicbankingapp"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>